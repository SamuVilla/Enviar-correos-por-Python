import os 

import smtplib
from email.message import EmailMessage

# Datos de conexi√≥n
smtp_host = "mail.vargasia.com" #o cualquier otra direcci√≥n
smtp_port = 587  # Pod√©s probar con 465 si us√°s SSL directo
usuario = "noreply@vargasia.com" #o cualquier otra
contrase√±a = "OuTRW9U6f#2yBf6h"

# Crear el mensaje
msg = EmailMessage()
msg['Subject'] = "Prueba desde Python"
msg['From'] = usuario
msg['To'] = "samuel.villa@vargasia.com"  # Cambi√° esto por el mail real
msg.set_content("Hola! Este es un correo enviado desde un script de Python montado por Samuel Villa en colaboraci√≥n con ChatGPT y Rafa Vargas. üòä")

# Enviar correo
try:
    with smtplib.SMTP(smtp_host, smtp_port) as smtp:
        smtp.starttls()  # Seguridad TLS
        smtp.login(usuario, contrase√±a)
        smtp.send_message(msg)
    print("‚úÖ Correo enviado exitosamente.")
except Exception as e:
    print("‚ùå Error al enviar el correo:")
    print(e)
